<div class="jumbotron">
  <h1>Handcrafted </br>items from </br>around</br> the world.</h1>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-lg-3 col-sm-4 col-xs-6">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency (listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
            <h6><%= raw listing.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')  %></h6>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




